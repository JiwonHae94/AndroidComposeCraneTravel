<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiwon.practice_crane">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Practice_crane">
        <activity
            android:name=".details.DetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.Practice_crane.NoActionBar" />
        <activity
            android:name=".calendar.CalendarActivity"
            android:exported="true"
            android:label="@string/title_activity_calendar"
            android:theme="@style/Theme.Practice_crane.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${googleMapsKey}" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Practice_crane.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>